{
    "ID": "DefaultID",
    "EGRESS_CONFIG": {
        "PROTOCOL": "MQTT",
        "PARAMETERS": {
            "HOST": "localhost",
            "PORT": 1883,
            "TRANSMISSION_PAIRS": "example:example,temp2:motor_temperature",
            "ENDPOINT_PIPES": [
                {
                    
                    
                    "INPUT_TOPICS": "topic1,topic2",
                    "FILTERS": [
                        {
                            "TYPE": "merge",
                            
                        },
                        {
                            "TYPE": "downsampling",
                            "PARAMETERS": {
                                "ORIGINAL_FREQUENCY": "100",
                                "DESIRED_FREQUENCY": "20"
                            }
                        }
                    ]
                }
            ]
        }
    },
    "BUS_CONFIG": {
        "PROTOCOL": "KAFKA",
        "PARAMETERS": {
            "HOST": "localhost",
            "PORT": 19092
        }
    },

    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Debug",
                "System": "Warning"
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId" ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception}"
                }
            }
        ]
    }

}